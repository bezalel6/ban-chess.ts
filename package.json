{
  "name": "ban-chess.ts",
  "version": "3.0.0",
  "description": "A TypeScript wrapper library for implementing the **Ban Chess** variant on top of the `chess.ts` library. In Ban Chess, players must navigate around banned moves - each move is preceded by the opponent banning one of their legal options.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "prebuild": "node scripts/inject-version.js",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build && npm run test",
    "postpublish": "npm run update-gui",
    "update-gui": "node scripts/update-gui.js",
    "release": "npm version patch && npm publish && git push --follow-tags"
  },
  "keywords": [
    "chess",
    "ban-chess",
    "typescript",
    "chess-variant",
    "board-game"
  ],
  "author": "bezalel6",
  "homepage": "https://github.com/bezalel6/ban-chess.ts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bezalel6/ban-chess.ts.git"
  },
  "bugs": {
    "url": "https://github.com/bezalel6/ban-chess.ts/issues"
  },
  "license": "ISC",
  "dependencies": {
    "chess.ts": "^0.16.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
